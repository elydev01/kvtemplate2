
<HomeMainScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: 1,1,1,1
        MDBoxLayout:
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgba: [1, 1, 1, 1]
                Rectangle:
                    size: self.size
                    pos: self.x, self.y + dp(root.bg_pos)
                    source: "assets/image.jpg"
            MDBoxLayout:
                orientation: 'vertical'
                spacing: dp(10)
                adaptive_height: True
                md_bg_color: 1,1,1,1
                radius: [dp(35), dp(35), 0, 0]
                padding: dp(30), dp(20)
                MDLabel:
                    text: "Get Started"
                    font_style: "H5"
                    color: app.theme_cls.primary_color
                    bold: True
                    adaptive_height: True
                MDBoxLayout:
                    adaptive_height: True
                    orientation: 'vertical'
                    MDTextField:
                        hint_text: "Name"
                    MDTextField:
                        hint_text: "E-mail"
                    MDTextField:
                        hint_text: "Password"
                MDBoxLayout:
                    adaptive_height: True
                    MDCheckbox:
                        size_hint: None, None
                        size: dp(40), dp(40)
                        pos_hint: {'center_y': .5}
                    MDLabel:
                        text:
                            "I agree to the [color=#0044CC]Terms of Service[/color] and [color=#0044CC]Privacy Policy[/color]"
                        markup: True
                        color: .3,.3,.3
                        font_size: sp(10)
                        pos_hint: {'center_y': .5}
                        adaptive_size: True
                MDBoxLayout:
                    adaptive_height: True
                    MDLabel:
                        text: "Sign Up"
                        bold: True
                        color: app.theme_cls.primary_color
                        font_style: "H6"
                        adaptive_height: True
                        pos_hint: {'center_y': .5}
                    MDFloatingActionButton:
                        icon: "arrow-right"
                        on_release: root.toggle_bg_pos()
                MDTextButton:
                    text: "[u]Sign In[/u]"
                    markup: True
                    theme_text_color: "Custom"
                    text_color: app.theme_cls.primary_color
